<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfflineTutorialActivity">

    <ImageView
        android:id="@+id/vegetableImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:src="@drawable/eggplant"
        />

    <TextView
        android:id="@+id/vegetableName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eggplant"
        android:layout_below="@+id/vegetableImage"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textFontWeight="200"/>

    <TextView
        android:id="@+id/vegetableDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eggplant"
        android:paddingVertical="20dp"
        android:layout_below="@+id/vegetableName"
        android:textSize="18dp"
        android:paddingHorizontal="25dp"
        android:textFontWeight="100"
        />

</RelativeLayout>