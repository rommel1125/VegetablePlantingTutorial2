<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B4D3B2"
    tools:context=".ClickItemPlan">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/action_bar3"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#abab9a"
        android:elevation="4dp"
        app:title="Vegetable"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light" >
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp">
    <ImageView
        android:id="@+id/imageViewplan"
        android:layout_width="match_parent"
        android:src="@drawable/eggplant1"
        android:layout_height="200dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="255dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@color/white">
    <TextView
        android:id="@+id/vegeNameplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eggplant\n(Talong)"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/dateplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="02/05/2021 - 07/24/2021"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textColor="#a9a9a9"
        android:letterSpacing=".05"/>

        <TextView
            android:id="@+id/harvest1"
            android:layout_width="wrap_content"
            android:text="07/24/2021"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <Button
            android:id="@+id/addToCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Calendar"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>